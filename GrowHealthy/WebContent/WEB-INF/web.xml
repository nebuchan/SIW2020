<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>GrowHealthy</display-name>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>controllers.Login</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegistrazioneCliente</servlet-name>
		<servlet-class>controllers.RegistrazioneCliente</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>RegistrazioneCliente</servlet-name>
		<url-pattern>/clientRegister</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>RegistrazioneAzienda</servlet-name>
		<servlet-class>controllers.RegistrazioneAzienda</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegistrazioneAzienda</servlet-name>
		<url-pattern>/companyRegister</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>controllers.Home</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DammiCategorie</servlet-name>
		<servlet-class>controllers.DammiCategorieProdotti</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DammiCategorie</servlet-name>
		<url-pattern>/categories</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DammiProdottiPerCategorie</servlet-name>
		<servlet-class>controllers.DammiProdottiPerCategoria</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DammiProdottiPerCategorie</servlet-name>
		<url-pattern>/productsForCategories</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DammiProdotto</servlet-name>
		<servlet-class>controllers.DammiProdotto</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DammiProdotto</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>

</web-app>